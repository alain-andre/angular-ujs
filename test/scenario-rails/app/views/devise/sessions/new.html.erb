<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), data: {remote: 'user', confirm: 'U really want to sign in ?????'}, html: {'ng-controller' => 'RemoteFormCtrl'}) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, 'ng-model' => 'user.email' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, 'ng-model' => 'user.password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>

  <div> {{ success }} </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to 'Sign Out', destroy_user_session_path, id: 'sign_out', data: {method: :delete, confirm: 'Are u sure really WANT to Sign Out????'} %>